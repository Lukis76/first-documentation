---
import GithubIcon from './icons/github-icon.astro'
import TwitterIcon from './icons/twitter-icon.astro'
import ToggleMode from './toggle-mode.astro'
const navigation = [
  ['Documents', 'docs'],
  ['Componets', 'components'],
  ['Themes', 'themes'],
  ['Examples', 'examples'],
]
---

<header class='w-full px-2 border-b border-zinc-300 dark:border-zinc-800 sticky top-0 z-50 bg-background/95 backdrop-blur-lg'>
  <div class='flex w-full max-w-7xl h-14 items-center mx-auto'>
    <div class=' flex flex-row items-center space-x-4 md:space-x-10'>
      <a href='http://rocketdev.app.vercel' target='_blank' rel='noopenner noreferrer' class='flex flex-row space-x-2 items-center'>
				<p class='w-12 h-12 border rounded-full text-center'>R</p>
        <span class='text-2xl font-semibold hidden md:flex'>RocketDev.</span>
      </a>
      <nav class='flex items-center space-x-6 text-sm font-medium'>
        {
          navigation.map(([title, url]) => {
            return (
              <a href={`/${url}`} class='transition-colors hover:text-foreground/80 text-foreground/60'>
                {title}
              </a>
            )
          })
        }
      </nav>
    </div>
    <div class='flex flex-1 items-center justify-between space-x-2 md:justify-end'>
      <div class='w-full flex-1 md:w-auto md:flex-none'>
        <!-- search bar -->
      </div>
      <nav class='flex items-center'>
        <a
          href='https://github.com/Lukis76/'
          target='_blank'
          rel='noopenner noreferrer'
          class='w-10 h-10 rounded-lg hover:bg-zinc-700/10 dark:hover:bg-zinc-700/50 flex justify-center items-center transition'
        >
          <GithubIcon />
        </a>
        <a
          href='https://twitter.com/'
          target='_blank'
          rel='noopenner noreferrer'
          class='w-10 h-10 rounded-lg hover:bg-zinc-700/10 dark:hover:bg-zinc-700/50 flex justify-center items-center transition'
        >
          <TwitterIcon />
        </a>
        <ToggleMode />
      </nav>
    </div>
  </div>
</header>
